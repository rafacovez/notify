{
  "name": "notify-bot",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "runArgs": ["-p", "8080:80", "--env-file", "app/config/.env.local"],
  "mounts": ["source=${localWorkspaceFolder}/app,target=/code/app,type=bind"],
  "workspaceFolder": "/code",
  "shutdownAction": "stopContainer",
  "postCreateCommand": "pip install --no-cache-dir --upgrade -r requirements.txt",
  "postStartCommand": "watchmedo auto-restart --pattern='*.py' --recursive -- python app/main.py",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"]
    }
  },
  "remoteUser": "root"
}
